{
  "cli": {
    "version": ">= 18.0.5",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal"
    },
    "production": {
      "autoIncrement": true
    },
    "production-apk": {
      "extends": "production",
      "env": {
        "NODE_ENV": "production"
      },
      "android": {
        "distribution": "internal",
        "buildType": "apk"
      }
    }
  },
  "submit": {
    "production": {}
  }
}